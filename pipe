name: Deploy to S3

on:
  push:
    branches:
      - main  # Executa a pipeline quando houver um push na branch 'main'

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Configure AWS credentials
      uses: aws-actions/configure-aws-credentials@v3
      with:
        aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
        aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
        aws-region: us-east-1  # Substitua pela região do seu bucket S3

    - name: Sync files to S3
      run: |
        aws s3 sync ./diretorio-local s3://nome-do-seu-bucket --delete
      # Substitua ./diretorio-local pelo diretório que contém os arquivos que você deseja copiar
      # e 'nome-do-seu-bucket' pelo nome do bucket S3
